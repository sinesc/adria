/**
 * tokenizer definition item
 */
module DefinitionItem = proto  {

    name: null,
    match: null,

    /**
     * constructor
     *
     * @param string? type name of matched tokens, null to discard matches
     * @param func match function uses to perform matches, receives input string, start position and last matched token
     */
    constructor: func(string? name, func match) {
        this.name = name;
        this.match = match;
    },
};