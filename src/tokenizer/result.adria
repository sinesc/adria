var Position = proto {

    col: 0,
    row: 0,

    constructor: function(col, row) {
        this.col = col;
        this.row = row;
    },

    toString: function() {
        return 'line ' + this.row + ', column ' + this.col;
    },
};

var Token = proto {

    data: '',
    type: 0,
    start: 0,
    pos: null,

    constructor: function(data, type, start, col, row) {

        this.data = data;
        this.type = type;
        this.start = start;
        this.pos = new Position(col, row);
    },
};

module Result = proto {

    constructor: function(tokenizer) {
        this.tokenizer = tokenizer;
        this.tokens = [ ];
    },

    /**
     * add a token to the result
     *
     * @param data the matched string
     * @param type token type id from Type Enum
     * @param start absolute startposition in the source string
     * @param col calculated column
     * @param row calculated row
     */
    add: function(data, type, start, col, row) {
        this.tokens.push(new Token(data, type, start, col, row));
    },

    /**
     * retrieve a token from the result
     *
     * @param id token id to retrieve
     * @return token object or undefined
     */
    get: function(tokenId) {
        return this.tokens[tokenId];
    },

    /**
     * return number of tokens in result
     */
    length: property {
        get: function() {
            return this.tokens.length;
        }
    },

};
