
var AdriaNode = require('./adria_node');
var Module = require('./module');

module ModuleStatement = proto (AdriaNode) {

    toSourceNode: func() {

        var name = this.get('name').value;
        var moduleNode = this.findProto(Module);
        moduleNode.setModuleExport(name);

        var result = this.csn();
        result.add(name);
        result.add(' = ');
        result.add(this.get('value').toSourceNode());
        result.add(';' + this.nl());
        return result;
    },
};