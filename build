#!/bin/bash
set -e
echo "building compiler..."
adria $@ --no-application --no-cache --no-blanks --platform node --no-map --tweak-nostrict --out out.js main.adria
ls -l out.js
echo "recompiling compiler with compiler..."
self-adria $@ --no-application --no-cache --no-blanks --platform node --no-map --tweak-nostrict --out out.js main.adria
ls -l out.js
echo "ok. again..."
self-adria $@ --no-application --no-cache --no-blanks --platform node --no-map --tweak-nostrict --out out.js main.adria
ls -l out.js
echo "done."